<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#472832"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.manga.detail.MangaDetailFragment">

    <ImageView
        android:id="@+id/manga_detail_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/manga_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#504F4F"
        android:textSize="23sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@id/manga_detail_image"
        app:layout_constraintStart_toStartOf="@id/manga_detail_image"
        app:layout_constraintTop_toBottomOf="@id/manga_detail_image" />

</androidx.constraintlayout.widget.ConstraintLayout>